{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Language and Environment */
    "target": "es2021",
    "lib": ["es2021", "DOM"],

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",

    /* Emit */
    "noEmitOnError": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true
  },
  "include": ["src/**/*", "jest-global.d.ts"]
}
